@model RazorMVC.Models.Fornecedor

@{
    ViewData["Title"] = "Delete";
    string telefone = Model.Telefone == null ? "(Sem telefone cadastrado)" : Model.Telefone.ToString();
}

<h5 class="partial-view-title">Exclusão</h5>

<div class="custom-subtitle">Tem certeza de que deseja excluir este fornecedor?</div>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @telefone
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</a>
    </form>
</div>
