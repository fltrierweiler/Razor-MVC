@model RazorMVC.Models.Fornecedor

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<div class="row">

    <div class="col-md-6 custom-container">

        <div class="custom-title">Preencha os dados que deseja editar.</div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="Nome" class="form-control" required placeholder="Insira o nome do fornecedor"/>
                <label asp-for="Nome" class="control-label"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" placeholder="(Opcional) Insira um número de telefone" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:15px;">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
        <div style="text-align:right;">
            <a asp-action="Index">Voltar para a lista</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
