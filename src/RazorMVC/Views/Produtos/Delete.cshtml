@model RazorMVC.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h5 class="partial-view-title">Excluir Produto</h5>

<div class="custom-title">Tem certeza de que deseja excluir este produto?</div>
<div>
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.DataDeCriação):
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DataDeCriação)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Excluir</button>
        <a asp-action="Index" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</a>
    </form>
</div>
