@model RazorMVC.Models.Produto

@{
    ViewData["Title"] = "Delete";
    string descrição = string.IsNullOrEmpty(Model.Descrição) ? "(Nenhuma descrição cadastrada)" : Model.Descrição;
}

<h1>Exclusão</h1>

<h4>Tem certeza de que deseja excluir este produto?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descrição):
        </dt>
        <dd class = "col-sm-10">
            @descrição
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preço):
        </dt>
        <dd class = "col-sm-10">
            R$@Html.DisplayFor(model => model.Preço)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FornecedorId):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FornecedorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeCriação):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDeCriação)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
